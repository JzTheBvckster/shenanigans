<BorderPane styleClass="finance-root" stylesheets="@../styles/finance.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shenanigans.features.finance.controller.FinanceController">
  <left>
