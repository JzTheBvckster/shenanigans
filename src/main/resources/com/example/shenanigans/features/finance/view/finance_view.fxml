              </VBox>
            </HBox>
          </VBox>
        </HBox>
        <!-- Invoices List Card -->
        <VBox spacing="12" styleClass="card" VBox.vgrow="ALWAYS">
          <HBox alignment="CENTER_LEFT" spacing="12">
            <Label styleClass="section-title" text="Invoices" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="exportButton" styleClass="header-primary-button" text="Export" />
          </HBox>
          <VBox fx:id="invoicesContainer" spacing="8" styleClass="invoices-container">
